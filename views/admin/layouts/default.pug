doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css")
    link(rel="stylesheet" href="/admin/css/styles.css")
    script(src="https://cdn.tailwindcss.com")
    title #{pageTitle}
  body 
    div(class="overlay-box fixed z-[-1] top-0 left-0 w-full h-full bg-black opacity-0 lg:hidden block")
    include ../partials/header.pug 

    if messages.success
      script.
        const flashSuccess = !{JSON.stringify(messages.success)};
    if messages.error
      script.
        const flashError = !{JSON.stringify(messages.error)};

    .body
      include ../partials/sider.pug 

      div(class="main relative lg:left-[250px] left-[0] lg:w-[calc(100%-250px)] w-full bg-[#F2F7FB] md:px-[20px] px-[10px] pt-[35px] pb-[40px] transition-all duration-500 ease-in-out")
          block main

    script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
    script(src= "/tinymce/tinymce.min.js")
    script(src= "/admin/js/tinymce-config.js")
    script(src="/admin/js/script.js")
        