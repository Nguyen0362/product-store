mixin breadcrumb(iconTitle, title, items)
    div(class="flex flex-wrap justify-between items-center")
        div(class="px-[15px] lg:w-auto w-full lg:mb-0 mb-[10px]")
          div(class="flex items-center justify-center flex-wrap")
              span(class="lg:mb-0 mb-[10px] w-[40px] h-[40px] text-white text-[18px] rounded-[5px] lg:mr-[20px] mr-0 bg-[#4099ff] flex items-center justify-center" style="box-shadow: 0 2px 12px -3px rgba(0, 0, 0, 0.5);")
                  i(class=iconTitle)
              h1(class="text-[18px] font-[500] lg:w-auto w-full text-center") #{title}
        div(class="px-[15px] lg:w-auto w-full lg:mb-0 mb-[10px]")
          nav(aria-label="breadcrumb")
            ol(class = "flex flex-wrap items-center justify-end py-[12px] px-[16px]")
              each item, index in items
                if index != items.length - 1
                    li(class="")
                      a(href = item.href class="sm:text-[16px] text-[13px] text-[#37474F] hover:text-[#4099FF] transition-all duration-300 ease-in-out")
                          if(item.icon)
                              i(class=item.icon + " mr-[5px]")
                          | #{item.label}
                      span(class="px-[8px] text-[#37474F] sm:text-[16px] text-[13px]") /
                else 
                  li(class="text-[#4099FF] sm:text-[16px] text-[13px]") 
                      if(item.icon)
                          i(class=item.icon + " mr-[5px]")
                      | #{item.label}
